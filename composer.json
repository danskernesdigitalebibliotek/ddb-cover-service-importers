{
    "name": "danskernesdigitalebibliotek/ddb-cover-service-imports",
    "description": "Cover service imports for the danish libraries",
    "type": "project",
    "license": "AGPL-3.0-only",
    "require": {
        "php": "^7.4 | 8.0",
        "ext-ctype": "*",
        "ext-curl": "*",
        "ext-ftp": "*",
        "ext-iconv": "*",
        "ext-json": "*",
        "ext-redis": "*",
        "ext-xmlreader": "*",
        "ext-zend-opcache": "*",
        "ext-zip": "*",
        "ext-amqp": "*",
        "box/spout": "^3.0",
        "cloudinary/cloudinary_php": "^1.12",
        "doctrine/doctrine-migrations-bundle": "^1.0",
        "eightpoints/guzzle-bundle": "^7.4",
        "elasticsearch/elasticsearch": "^6.7",
        "friendsofsymfony/elastica-bundle": "^5.0",
        "guzzlehttp/guzzle": "^6.3",
        "karriere/json-decoder": "^2.1",
        "league/flysystem-ziparchive": "^1.0",
        "league/oauth2-client": "^2.6",
        "nicebooks/isbn": "^0.2.56",
        "oneup/flysystem-bundle": "^3.0",
        "predis/predis": "^1.1",
        "promphp/prometheus_client_php": "^2.2",
        "ruflin/elastica": "^6.0",
        "scriptotek/marc": "^2.1",
        "symfony/browser-kit": "^4.0",
        "symfony/cache": "^4.0",
        "symfony/console": "^4.0",
        "symfony/dotenv": "^4.0",
        "symfony/event-dispatcher": "^4.0",
        "symfony/flex": "^1.0",
        "symfony/framework-bundle": "^4.0",
        "symfony/lock": "^4.0",
        "symfony/messenger": "4.4.*",
        "symfony/monolog-bundle": "^3.3",
        "symfony/orm-pack": "^1.0",
        "symfony/process": "^4.0",
        "symfony/serializer": "4.4.*",
        "symfony/translation": "4.4.*",
        "symfony/yaml": "^4.0"
    },
    "require-dev": {
        "doctrine/doctrine-fixtures-bundle": "^3.0",
        "escapestudios/symfony2-coding-standard": "^3.10",
        "friendsofphp/php-cs-fixer": "^2.13",
        "phpunit/phpunit": "^7",
        "symfony/debug-pack": "^1.0",
        "symfony/maker-bundle": "^1.9"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "paragonie/random_compat": "2.*",
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "docker-build": [
            "bin/console --env=prod assets:install"
        ],
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "check-coding-standards": [
            "@check-coding-standards/php-cs-fixer"
        ],
        "apply-coding-standards": [
            "php-cs-fixer --config=.php_cs.dist fix"
        ],
        "phpunit": [
            "./vendor/bin/phpunit"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "4.4.*"
        }
    }
}
