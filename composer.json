{
    "name": "danskernesdigitalebibliotek/ddb-cover-service-imports",
    "description": "Cover service imports for the danish libraries",
    "type": "project",
    "license": "AGPL-3.0-only",
    "require": {
        "php": "^8.1",
        "ext-amqp": "*",
        "ext-ctype": "*",
        "ext-curl": "*",
        "ext-ftp": "*",
        "ext-iconv": "*",
        "ext-json": "*",
        "ext-redis": "*",
        "ext-xmlreader": "*",
        "ext-zend-opcache": "*",
        "ext-zip": "*",
        "ext-libxml": "*",
        "box/spout": "^3.0",
        "cloudinary/cloudinary_php": "^2",
        "doctrine/doctrine-bundle": "^2.4",
        "doctrine/doctrine-migrations-bundle": "^3.0",
        "doctrine/orm": "^2.10",
        "eightpoints/guzzle-bundle": "^8.0",
        "elasticsearch/elasticsearch": "^8.2",
        "itk-dev/metrics-bundle": "^1.0.0",
        "league/oauth2-client": "^2.6",
        "nicebooks/isbn": "^0.3",
        "oneup/flysystem-bundle": "^4.4",
        "predis/predis": "^1.1",
        "scriptotek/marc": "^2.1",
        "symfony/cache": "^6.1",
        "symfony/console": "^6.1",
        "symfony/doctrine-messenger": "^5.4",
        "symfony/dotenv": "^6.1",
        "symfony/event-dispatcher": "^6.1",
        "symfony/flex": "^1.0",
        "symfony/framework-bundle": "^6.1",
        "symfony/lock": "^6.1",
        "symfony/messenger": "^6.1",
        "symfony/monolog-bundle": "^3.3",
        "symfony/process": "^6.1",
        "symfony/runtime": "^6.1",
        "symfony/serializer": "^6.1",
        "symfony/yaml": "^6.1"
    },
    "require-dev": {
        "doctrine/doctrine-fixtures-bundle": "^3.0",
        "escapestudios/symfony2-coding-standard": "^3.10",
        "fakerphp/faker": "^1.14",
        "friendsofphp/php-cs-fixer": "^3.8",
        "kubawerlos/php-cs-fixer-custom-fixers": "^3.11",
        "phpunit/phpunit": "^9.5",
        "psalm/plugin-symfony": "^3.0",
        "rector/rector": "^0.13.7",
        "symfony/css-selector": "^6.1",
        "symfony/debug-bundle": "^6.1",
        "symfony/maker-bundle": "^1.9",
        "symfony/phpunit-bridge": "^6.1",
        "symfony/stopwatch": "^6.1",
        "vimeo/psalm": "^4.12",
        "weirdan/doctrine-psalm-plugin": "^2.0"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true,
        "allow-plugins": {
            "symfony/flex": true,
            "symfony/runtime": true
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "paragonie/random_compat": "2.*",
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "docker-build": [
            "bin/console --env=prod assets:install"
        ],
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "coding-standards-check": [
            "./vendor/bin/php-cs-fixer fix --dry-run --format=checkstyle"
        ],
        "coding-standards-apply": [
            "php-cs-fixer fix"
        ],
        "phpunit": [
            "./vendor/bin/phpunit"
        ],
        "queues": [
            "bin/console messenger:consume async_priority_high async_priority_normal async_priority_low async_no_hit --failure-limit=1 -vv"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "^6.1"
        }
    }
}
