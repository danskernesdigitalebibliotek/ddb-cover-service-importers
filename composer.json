{
    "name": "danskernesdigitalebibliotek/ddb-cover-service-imports",
    "description": "Cover service imports for the danish libraries",
    "type": "project",
    "license": "AGPL-3.0-only",
    "require": {
        "php": "^7.4 | 8.0",
        "ext-amqp": "*",
        "ext-ctype": "*",
        "ext-curl": "*",
        "ext-ftp": "*",
        "ext-iconv": "*",
        "ext-json": "*",
        "ext-redis": "*",
        "ext-xmlreader": "*",
        "ext-zend-opcache": "*",
        "ext-zip": "*",
        "box/spout": "^3.0",
        "cloudinary/cloudinary_php": "^1.12",
        "composer/package-versions-deprecated": "^1.11.99",
        "doctrine/doctrine-bundle": "^2.4",
        "doctrine/doctrine-migrations-bundle": "^3.0",
        "doctrine/orm": "^2.10",
        "eightpoints/guzzle-bundle": "^8.0",
        "elasticsearch/elasticsearch": "^6.7",
        "friendsofsymfony/elastica-bundle": "^5.0",
        "guzzlehttp/guzzle": "^6.3",
        "itk-dev/metrics-bundle": "^0.0.1",
        "karriere/json-decoder": "^2.1",
        "league/oauth2-client": "^2.6",
        "nicebooks/isbn": "^0.2.56",
        "oneup/flysystem-bundle": "^3.0",
        "predis/predis": "^1.1",
        "ruflin/elastica": "^6.0",
        "scriptotek/marc": "^2.1",
        "symfony/browser-kit": "^5.0",
        "symfony/cache": "^5.0",
        "symfony/console": "^5.0",
        "symfony/dotenv": "^5.0",
        "symfony/event-dispatcher": "5.3.*",
        "symfony/flex": "^1.0",
        "symfony/framework-bundle": "^5.0",
        "symfony/lock": "^5.0",
        "symfony/messenger": "^5.0",
        "symfony/monolog-bundle": "^3.3",
        "symfony/process": "^5.0",
        "symfony/proxy-manager-bridge": "5.3.*",
        "symfony/runtime": "5.3.*",
        "symfony/serializer": "^5.0",
        "symfony/translation": "^5.0",
        "symfony/yaml": "^5.0"
    },
    "require-dev": {
        "doctrine/doctrine-fixtures-bundle": "^3.0",
        "escapestudios/symfony2-coding-standard": "^3.10",
        "fakerphp/faker": "^1.14",
        "friendsofphp/php-cs-fixer": "^2.13",
        "phpunit/phpunit": "^9.5",
        "psalm/plugin-symfony": "^3.0",
        "symfony/css-selector": "^4.4",
        "symfony/debug-bundle": "^5.3",
        "symfony/maker-bundle": "^1.9",
        "symfony/phpunit-bridge": "^5.3",
        "symfony/stopwatch": "^5.3",
        "symfony/web-profiler-bundle": "^5.3",
        "vimeo/psalm": "^4.12"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "paragonie/random_compat": "2.*",
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "docker-build": [
            "bin/console --env=prod assets:install"
        ],
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "coding-standards-check": [
            "./vendor/bin/php-cs-fixer --config=.php_cs.dist fix --dry-run --format=checkstyle"
        ],
        "coding-standards-apply": [
            "php-cs-fixer --config=.php_cs.dist fix"
        ],
        "phpunit": [
            "./vendor/bin/phpunit"
        ],
        "queues": [
            "bin/console messenger:consume async_priority_high async_priority_normal async_priority_low async_no_hit"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "5.3.*"
        }
    }
}
